{
    "name": "@mother-harness/orchestrator",
    "version": "0.1.0",
    "description": "Mother Orchestrator - Task planning, routing, and synthesis",
    "type": "module",
    "main": "./dist/server.js",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist",
        "dev": "tsx watch src/server.ts",
        "start": "node dist/server.js",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:integration": "vitest run --config vitest.integration.config.ts"
    },
    "dependencies": {
        "@mother-harness/agents": "workspace:*",
        "@mother-harness/shared": "workspace:*",
        "fastify": "^4.25.0",
        "@fastify/cors": "^8.5.0",
        "@fastify/websocket": "^8.3.0",
        "@fastify/swagger": "^8.14.0",
        "@fastify/swagger-ui": "^2.1.0",
        "google-auth-library": "^9.11.0",
        "ioredis": "^5.3.0",
        "zod": "^3.22.0",
        "nanoid": "^5.0.0",
        "pino": "^8.17.0",
        "yaml": "^2.3.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "pino-pretty": "^10.2.0",
        "rimraf": "^5.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0"
    }
}
