# Mother-Harness Environment Configuration
# Copy this file to .env and update with your values
# 
# Command: cp env.example .env

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=8000
LOG_LEVEL=info
CORS_ORIGIN=*
VERSION=0.1.0

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://:mother_dev_password@localhost:6379
REDIS_PASSWORD=mother_dev_password

# ============================================
# Ollama Configuration
# ============================================
# Local Ollama instance (for local models)
OLLAMA_LOCAL_URL=http://localhost:11434

# Cloud Ollama API (optional, for cloud models)
OLLAMA_CLOUD_API_KEY=

# ============================================
# n8n Configuration
# ============================================
N8N_URL=http://localhost:5678
N8N_API_KEY=
N8N_USER=admin
N8N_PASSWORD=mother_n8n_password

# ============================================
# Docling Configuration
# ============================================
DOCLING_API_URL=http://localhost:8000
STORAGE_PATH=/mnt/libraries
LIBRARIES_PATH=/core4/libraries

# ============================================
# Dashboard Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
ORCHESTRATOR_URL=http://localhost:8000

