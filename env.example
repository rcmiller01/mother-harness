# Mother-Harness Environment Configuration
# Copy this file to .env and update with your values
# 
# Command: cp env.example .env
#
# SECURITY WARNING:
# - Replace every CHANGE_ME value with a unique, rotated secret.
# - Do not deploy with empty secrets or default placeholders.

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=8000
LOG_LEVEL=info
CORS_ORIGIN=*
VERSION=0.1.0

# ============================================
# Redis Configuration
# ============================================
# Rotate Redis credentials for every environment.
REDIS_URL=redis://orchestrator:CHANGE_ME@localhost:6379
REDIS_USERNAME=orchestrator
REDIS_PASSWORD=CHANGE_ME

# Redis ACL user passwords (rotate for each environment)
REDIS_ACL_ORCHESTRATOR_PASSWORD=CHANGE_ME
REDIS_ACL_DOCLING_PASSWORD=CHANGE_ME
REDIS_ACL_AGENTS_PASSWORD=CHANGE_ME
REDIS_ACL_DASHBOARD_PASSWORD=CHANGE_ME

# ============================================
# Ollama Configuration
# ============================================
# Local Ollama instance (for local models)
OLLAMA_LOCAL_URL=http://localhost:11434

# Cloud Ollama API (optional, for cloud models)
OLLAMA_CLOUD_API_KEY=

# ============================================
# n8n Configuration
# ============================================
N8N_URL=http://localhost:5678
N8N_API_KEY=
N8N_USER=admin
# Rotate the admin password before deployment.
N8N_PASSWORD=CHANGE_ME

# ============================================
# Docling Configuration
# ============================================
DOCLING_API_URL=http://localhost:8000
STORAGE_PATH=/mnt/libraries
LIBRARIES_PATH=/core4/libraries

# ============================================
# Dashboard Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
ORCHESTRATOR_URL=http://localhost:8000

# ============================================
# Authentication (Google)
# ============================================
JWT_SECRET=CHANGE_ME
GOOGLE_CLIENT_ID=
GOOGLE_ALLOWED_DOMAINS=
GOOGLE_ADMIN_EMAILS=
GOOGLE_APPROVER_EMAILS=

# ============================================
# Library Access Control
# ============================================
LIBRARY_ALLOWED_IDS=
